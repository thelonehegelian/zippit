{
  "compilerOptions": {
    "target": "es5",                          
    "module": "ES2020",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDirs": ["server/src"],
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext" 
    // "resolveJsonModule": true,
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "./server/**/*.ts",
    // "./client/**/*.ts"
  ]
}
